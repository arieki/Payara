<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <parent>
    <artifactId>fish372-tests</artifactId>
    <groupId>fish.payara.server</groupId>
    <version>5.2022.3-SNAPSHOT</version>
  </parent>
  <modelVersion>4.0.0</modelVersion>
  <artifactId>datagrid-tests</artifactId>
  <packaging>war</packaging>
  <properties>
    <!--payara-micro-path>${project.parent
    .basedir}/appserver/extras/payara-micro
      /payara-micro-distribution/target/</payara-micro-path-->
    <payara-micro-version>${project.parent.version}</payara-micro-version>
  </properties>
  <build>
    <finalName>${project.name}</finalName>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-surefire-plugin</artifactId>
        <version>2.22.0</version>
        <configuration>
          <useSystemClassLoader>false</useSystemClassLoader>
          <forkCount>0</forkCount>
        </configuration>
      </plugin>
      <plugin>
        <groupId>fish.payara.maven.plugins</groupId>
        <artifactId>payara-micro-maven-plugin</artifactId>
        <version>1.4.0</version>
        <executions>
          <execution>
            <id>noclusters-false-start</id>
            <phase>pre-integration-test</phase>
            <goals>
              <goal>start</goal>
            </goals>
            <configuration>
              <commandLineOptions>
                <option>
                  <key>--port</key>
                  <value>9090</value>
                </option>
              </commandLineOptions>
            </configuration>
          </execution>
          <execution>
            <id>noclusters-true-start</id>
            <phase>pre-integration-test</phase>
            <goals>
              <goal>start</goal>
            </goals>
            <configuration>
              <commandLineOptions>
                <option>
                  <key>--port</key>
                  <value>9191</value>
                </option>
                <option>
                  <key>--nocluster</key>
                </option>
              </commandLineOptions>
            </configuration>
          </execution>
          <execution>
            <id>payara-stop</id>
            <phase>post-integration-test</phase>
            <goals>
              <goal>stop</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <payaraVersion>${payara-micro-version}</payaraVersion>
          <artifactItem>
            <groupId>fish.payara.extras</groupId>
            <artifactId>payara-micro</artifactId>
            <version>${payara-micro-version}</version>
          </artifactItem>
          <daemon>true</daemon>
          <contextRoot>myApp</contextRoot>
          <commandLineOptions>
            <option>
              <key>--deploy</key>
              <value>${project.build.directory}/${project.build.finalName}</value>
            </option>
          </commandLineOptions>
        </configuration>
      </plugin>
    </plugins>
  </build>
</project>